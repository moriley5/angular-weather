<div class="locations container" ng-controller="travelDestinationsController">
	<div class="row">
		<div class="col-md-4 location" ng-click="onColoradoClick()">
			<img class="image" src="images/colorado.jpg" alt="colorado" ng-show="showColoradoImage">
			<section ng-hide="showColoradoImage">
				<p style="text-align:center">
					Current Temperature: {{coloradoData.currentTemperature}}°F</p>
				<p style="text-align:center">{{coloradoData.summary}}</p>
			</section>
			<h3 class="city">Colorado</h3>		
		</div>

		<div class="col-md-4 location" ng-click="onGreeceClick()">
			<img class="image" src="images/greece.jpg" alt="greece" ng-show="showGreeceImage">
